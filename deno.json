{
	"imports": {
		"std/": "https://deno.land/std@0.176.0/",
		"mongo": "https://deno.land/x/mongo@v0.31.1/mod.ts",
		"oak": "https://deno.land/x/oak@v11.1.0/mod.ts"
	},
	"tasks": {
		"dev": "deno run --watch main.ts",
		"start": "deno run -A main.ts",
		"vendor": "deno vendor main.ts"
	},
	"fmt": {
		"files": {
			"include": ["src/"],
			"exclude": ["node_modules/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
